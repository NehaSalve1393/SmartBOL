<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.authentication.RegistrationActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@mipmap/solmartb_logo1"/>
    <TextView
        android:id="@+id/testlabelr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="*** TEST ENVIRONMENT ***"
        android:textColor="@color/colorAccent" />
    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="@id/img_logo"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fullname_id_edt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp"
            android:inputType="text"
            android:textSize="15sp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fullname_id_edt_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fullname"
                android:textColor="@color/login_edit_text_col"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/carrier_id_edt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp"
            android:inputType="text"
            android:textSize="15sp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/carrier_edt_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/carrier"
                android:textColor="@color/login_edit_text_col"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone_id_edt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp"
            android:inputType="text"
            android:textSize="15sp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_id_edt_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone"
                android:inputType="phone"
                android:textColor="@color/login_edit_text_col"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_id_edt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp"
            android:inputType="text"
            android:textSize="15sp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_id_edt_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/login_edit_text_col"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/button_border"
        android:text="@string/register"/>

</LinearLayout>